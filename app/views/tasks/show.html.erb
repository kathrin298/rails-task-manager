<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<% if @task.completed %>
 <p><input type="checkbox" checked>This task is completed</p>
<% else %>
 <p><input type="checkbox">This task is not completed yet</p>
<% end %>

<p> <%= link_to 'Edit this task', edit_task_path(@task.id) %> </p>
<p> <%= link_to 'Back to list', tasks_path %> </p>
