<h1>Your Tasks For Today</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <p><input type="checkbox" checked><%= link_to task.title, task_path(task.id) %> - <%= link_to 'delete task', task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></p>
    <% else %>
      <p><input type="checkbox"><%= link_to task.title, task_path(task.id) %> - <%= link_to 'delete task', task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } %></p>
    <% end %>
<% end %>

<%= link_to '+ Add a new task', new_task_path %>
